<tr class="order-row-<%= order.id %>">
  <td>
    <%= order.id %>
  </td>
  <td><%= order.first_name %>
  </td>
  <td><%= order.last_name %>
  </td>
  <td>
    <%= order.delivery_address %>
  </td>
  <td class="order-status">
    <%= order.status %>
  </td>
  <td>
    <%= number_to_currency order.total_price, precision: 2 %>
  </td>
  <td>
    <%= link_to t('details'), order_details_restaurateur_path(order) %>
  </td>
</tr>
