<div class="restaurateur-modal-container">
  <div class="restaurateur-modal-create" data-no-turbolink="true">
    <%= simple_form_for(@restaurant, url: restaurateur_restaurants_path, method: :post, remote: true, html: { multipart: true, 'js-class': 'RestaurateurCreateForm', id: 'create-restaurant-form', novalidate: false }, authenticity_token: true) do |f|%>
      <%= f.error_notification %>
      <%= f.input :name %>
      <%= f.input :image, as: :file_with_no_class, input_html: {class: 'input-image'} %>
      <div class="row">
        <div class='col-md-6'>
          <%= f.input :food_type %>
        </div>
        <div class='col-md-6'>
          <%= f.input :address %>
        </div>
      </div>
      <div class="row">
        <div class='col-md-6'>
          <%= f.input :phone %>
        </div>
        <div class='col-md-3'>
          <%= f.input :hours_open, as: :string, wrapper_html: { class: 'hours_open' } %>
        </div>
        <div class='col-md-3'>
          <%= f.input :hours_close, as: :string, wrapper_html: { class: 'hours_close' } %>
        </div>
      </div>
      <div class="row">
        <div class='col-md-3'>
          <%= f.input :radius %>
        </div>
        <div class='col-md-3'>
          <%= f.input :min_order %>
        </div>
        <div class='col-md-3'>
          <%= f.input :avg_delivery_time %>
        </div>
        <div class='col-md-3'>
          <%= f.input :delivery_fee %>
        </div>
      </div>

      <%= f.input :pdf_file_1, as: :file_with_no_class, input_html: {class: 'input-pdf'} %>
      <%= f.input :pdf_file_2, as: :file_with_no_class, input_html: {class: 'input-pdf'} %>
      <%= f.input :pdf_file_3, as: :file_with_no_class, input_html: {class: 'input-pdf'} %>
      <%= f.input :pdf_file_4, as: :file_with_no_class, input_html: {class: 'input-pdf'} %>
      <div class='row'>
        <div class='col-md-4 col-md-offset-8 text-right'>
          <%= f.submit t('restaurant.add'), class: 'btn btn-success' %>
        </div>
      </div>

    <% end %>
  </div>
</div>
