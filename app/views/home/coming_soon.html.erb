<header id="header">
  <div class="container">
    <strong class="logo">
      <a href="#">
        <%= image_tag 'coming_soon/logo.png', alt:'Tastier', class: 'normal' %>
        <%= image_tag 'coming_soon/logo-fixed.png', alt:'Tastier', class: 'fixed' %>
      </a>
    </strong>
    <a href="#" class="nav-opener"></a>
    <nav id="nav">
      <ul class="menu">
        <li><a href="#"><%= t('contact_us') %></a></li>
        <li><a target="_blank" href="https://facebook.com/eattastier"><%= t('let_be_friends') %> <i class="icon-ico-facebook-footer"></i></a></li>
      </ul>
    </nav>
  </div>
</header>
<section class="visual style">
  <div class="bg-stretch">
    <span data-srcset="<%= asset_path 'coming_soon/img1.jpg' %>"></span>
  </div>
  <div class="container">
    <div class="frame">
      <h1><%= t('coming_soon') %></h1>
      <p><%= t('subscribe_below') %></p>
      <form action="#" class="form-submit">
        <div class="wrap">
          <div class="field-holder">
            <input type="text" placeholder="<%= t('user.email_address') %>" data-required="true">
            <div class="error-msg style"><%= t('user.valid_email') %></div>
          </div>
          <div class="btn-holder">
            <input type="submit" value="submit">
          </div>
        </div>
      </form>
    </div>
  </div>
</section>
